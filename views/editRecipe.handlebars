<div class="Recepie-Page">
    <div class="container">
        <form action='/{{RecipeData.id}}' method="POST" enctype="multipart/form-data">

            <h1>Edit Recipe</h1>
            <div style="display: flex; flex-direction:column; align-items: center; background-image: url(https://images.unsplash.com/photo-1512358761813-a29db767b251?ixid=MnwxMjA3fDB8MHx0b3BpYy1mZWVkfDEwNHx4alBSNGhsa0JHQXx8ZW58MHx8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60); background-size: cover">

                <div >
                     <div class="form-field">
                        <h3 style="padding-top:30px;">Please enter a title for your new recipe</h3>
                        <textarea style= "font-size:15px; color:#073B3A; background-color: white;" class="title" name="name">{{RecipeData.name}}</textarea>
                    </div>              

                    <h3>Please enter the ingredients: </h3>
                    <textarea style= "font-size:15px; color:#073B3A; background-color: white;" class="ingredints" name="ingredients">{{RecipeData.ingredients}}</textarea>

                    <h3>Please enter the instructions to create this: </h3>
                    <textarea style= "font-size:15px; color:#073B3A; background-color: white;" class="instructions" name="instructions">{{RecipeData.instructions}}</textarea>

                    <div class="file-field input-field">
                        <div class="btn grey" style="font-size:15px; color:#073B3A; background-color: white;">
                            <span>File</span>
                            <input id="image1" name="myImage" type="file" >
                        </div>
                            <h3>Please select an image to enter:</h3>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" style="font-size:15px; color:#073B3A; background-color: white;"type="text" name="image" value={{RecipeData.image}}>
                        </div>
                    </div>
                    <button style="font-size:15px; color:#073B3A; background-color: white; margin-bottom: 30px;" type="submit" id="imageButton" class="btn">Submit</button>


                </div>
                   
            </div>
            
        </form>
                <br>        
    </div>
</div>
